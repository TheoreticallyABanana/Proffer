@model IEnumerable<ProfferAPI.Models.SalesModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sales_price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_sold)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductsModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sales_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_sold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductsModel.User_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Sales_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Sales_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Sales_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
